        <addForeignKeyConstraint baseColumnNames="leave_status_id"
                                 baseTableName="leave_application"
                                 constraintName="fk_leave_application__leave_status_id"
                                 referencedColumnNames="id"
                                 referencedTableName="leave_status"/>

        <addForeignKeyConstraint baseColumnNames="staff_id"
                                 baseTableName="leave_application"
                                 constraintName="fk_leave_application__staff_id"
                                 referencedColumnNames="id"
                                 referencedTableName="staff"/>
    </changeSet>
</databaseChangeLog>
